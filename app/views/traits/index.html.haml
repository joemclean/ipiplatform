%h1 Traits

%table.table.table-striped
  %tr
    %th Name
    %th Description
    %th
    %th
    %th

  - @traits.each do |trait|
    %tr
      %td= trait.name
      %td= trait.description
      %td= link_to 'Show', trait
      
      -if current_user.is_admin?
        %td= link_to 'Edit', edit_trait_path(trait)
        %td= link_to 'Destroy', trait, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

.btn
  = link_to 'New Trait', new_trait_path
