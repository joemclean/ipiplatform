= form_for @resource do |f|
  .row
    - if @resource.errors.any?
      #error_explanation
        %h2= "#{pluralize(@resource.errors.count, "error")} prohibited this resource from being saved:"
        %ul
          - @resource.errors.full_messages.each do |msg|
            %li= msg
  %h2 Basic Information
  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :name
      = f.text_field :name, :placeholder => 'Name', :class => "form-control"
  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :link
      = f.text_field :link, :class => "form-control"
  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :description
      = f.text_area :description, :placeholder => 'A short description of what this resource is', :class => "form-control", :rows => 5
  .row    
    .form-group.col-sm-6
      %label.control-label
        = f.label :full_description
      = f.text_area :full_description, :placeholder => 'Full description of what this resource is', :class => "form-control", :rows => 6
  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :source
      = f.text_field :source, :placeholder => 'Who developed this resource?', :class => "form-control"
  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :tag_list
      = f.text_field :tag_list, :class => "form-control"
  %h2 Value Proposition Colors
  %h4= 'What value proposition color(s) is this best suited for?'
  .field
    = hidden_field_tag "color_ids[]", nil, id: 'nil_color'
    -@colors.each do |color|
      =check_box_tag "color_ids[]", color.id, @resource.checked_color_tags(params, color), id: "color_id_#{color.id}"
      =color.name
      %br
  %br
  %h4= 'What phase(s) is this best suited for?'
  .field
    = hidden_field_tag "phase_ids[]", nil, id: 'nil_phase'
    -@phases.each do |phase|
      =check_box_tag "phase_ids[]", phase.id, @resource.checked_phase_tags(params, phase), id: "phase_id_#{phase.id}"
      =phase.name 
      %br
  %br
  %br
  %br
  .field
    =f.submit id: "submit_resource"


